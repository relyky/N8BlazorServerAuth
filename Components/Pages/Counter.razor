@page "/counter"
@attribute [Authorize]

<PageTitle>Counter</PageTitle>

<MudContainer>
  <MudText Typo=Typo.h3>Counter</MudText>
  <MudText Typo=Typo.body1>Current count: @currentCount</MudText>

    <MudButton Variant=Variant.Filled Color=Color.Primary OnClick=IncrementCount>Click me</MudButton>
</MudContainer>

@code {
    int currentCount = 0;

    void IncrementCount()
    {
        currentCount++;
    }
}
